<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:orientation="vertical"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"

app:layout_behavior="@string/appbar_scrolling_view_behavior"
tools:context="com.example.yang.smallfavor.MainActivity"

android:background="@color/black">
    <!--tools:showIn="@layout/app_bar_main"-->
<LinearLayout
    android:layout_marginTop="15dp"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="0.4"
    android:layout_gravity="center_horizontal">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="作者"
        android:textSize="27sp"
        android:background="#444444"
        android:textColor="@color/white"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_marginRight="15dp"
        android:background="@color/gray"
        android:textColor="@color/black"
        android:textSize="27sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/problem_postername_edit" />

</LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.4"
        android:weightSum="4"
        android:layout_gravity="center_horizontal">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="標題"
                android:textSize="27sp"
                android:background="#444444"
                android:textColor="@color/white"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true" />

            <EditText
                android:layout_marginRight="5dp"
                android:background="@color/gray"
                android:textColor="@color/black"
                android:hint="標題"
                android:textSize="27sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/problem_set_title_edit" />


        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3">
            <EditText
                android:layout_marginRight="15dp"
                android:background="@color/gray"
                android:textColor="@color/black"
                android:hint="價錢"
                android:inputType="number"
                android:singleLine="true"
                android:textSize="27sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/problem_set_price_edit" />


        </LinearLayout>





    </LinearLayout>

    <LinearLayout
    android:paddingTop="5dp"
    android:paddingRight="15dp"
    android:orientation="horizontal"
    android:layout_weight="10"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="right">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="27sp"
        android:textColor="@color/white"
        android:text="問題" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:inputType="textMultiLine"
            android:background="@color/gray"
            android:textColor="@color/black"
            android:textSize="27sp"
            android:hint="解答"
            android:ems="10"
            android:id="@+id/problem_answer_content_edit"
            android:layout_weight="1" />
    </LinearLayout>

<RelativeLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="0.25"
    android:layout_gravity="center_horizontal">
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="放棄"
        android:textColor="@color/ivory"
        android:background="#00000000"
        android:textSize="25sp"
        android:id="@+id/problem_giveup_button_edit"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:background="#00000000"
        android:textColor="@color/ivory"
        android:text="發文"
        android:paddingRight="15dp"
        android:id="@+id/problem_post_button_edit"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>
</LinearLayout>